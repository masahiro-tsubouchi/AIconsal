# 🐳 Manufacturing AI Assistant Backend Configuration (Docker Environment)

# ==============================================================================
# 🔧 Docker開発環境用設定
# この設定ファイルをコピーして .env として使用してください
# ==============================================================================

# 🚀 API Configuration
DEBUG=true
RELOAD=true

# 🤖 AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=manufacturing-ai-assistant-dev

# 📈 LangSmith / LangChain Tracing v2（任意・既定OFF）
# 既存コードの変更なしで LangSmith 可視化を有効化できます。
# 有効化する場合は backend/.env に以下を設定してください（コミット禁止）。
LANGCHAIN_TRACING_V2=false
# LANGCHAIN_API_KEY=xxxxx_your_langsmith_api_key_xxxxx
LANGCHAIN_PROJECT=manufacturing-ai-assistant
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# 🌐 Server Configuration (Docker Environment)
HOST=0.0.0.0
PORT=8002

# 📁 File Processing (Docker Volumes)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# ⏰ Session Management
SESSION_TIMEOUT=3600

# 🔗 CORS Origins (Docker Network)
CORS_ORIGINS=http://localhost:3002,http://frontend:3002,http://localhost:5175

# 📊 Logging
LOG_LEVEL=INFO

# 💾 Durable Execution (optional)
# Enable LangGraph's checkpointer (MemorySaver) for durable execution.
# Set to true to enable persistence across steps/retries.
ENABLE_CHECKPOINTER=false

# 🐳 Docker Specific Settings
ENVIRONMENT=development
DOCKER_INTERNAL_HOST=backend
DOCKER_NETWORK=app-network

# 📈 Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090

# 🔒 Security (Docker Environment)
SECRET_KEY=your-secret-key-for-jwt-tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
